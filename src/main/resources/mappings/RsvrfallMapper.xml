    <!-- 水库汛期查询 -->
    <select id="getRsvrFS" resultMap="signListResult">
       select RP_RSVRFSR_B.STCD, ST_STBPRP_B.STNM, convert(int, BGMD) AS BGMD, convert(int, EDMD) as EDMD, FSTP
       from RP_RSVRFSR_B
         inner join ST_STBPRP_B on RP_RSVRFSR_B.STCD = ST_STBPRP_B.STCD
        where FSTP IS NOT NULL
    and RP_RSVRFSR_B.STCD != ''
    and RP_RSVRFSR_B.STCD in (
    select STCD
    from ST_STBPRP_B
    where STCD in (
        select STCD
        from RP_RSVRFCCH_B)
      and STTP like '%R%');
    </select>
    <!-- 获取汛限站 -->
