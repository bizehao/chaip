                </if>
                <if test="stcdOrStnm!=null">
                    <choose>
                        <when test="stcdOrStnm.size() > 1">
                            and b.stcd IN
                            <foreach item="stcdOrStnm" index="index" collection="stcdOrStnm" open="(" separator=","
                                     close=")">
                                #{stcdOrStnm}
                            </foreach>
                            or b.stnm IN
