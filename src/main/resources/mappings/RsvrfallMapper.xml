                and c.dq = '31'
                and sttp like '%R%' and ZFL='1'
                and c.db in (2,3) and c.viwe = 1
            </trim>
        </where>
        ) st
        INNER JOIN
        (
        select A.STCD, A.YMDHM as TM, A.ZR as rz,Q as w from YY_DATA_WAT A
        <where>
            DATATYPE='C'
            and
            <![CDATA[
				A.YMDHM>=#{beginTime} and A.YMDHM<=#{endTime}
			]]>
        </where>
        )PP
        on ST.STCD=PP.STCD
        order by ST.STCD,tm desc
