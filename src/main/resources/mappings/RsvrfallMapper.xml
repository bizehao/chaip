    <!-- 水库汛期查询 -->
    <select id="getRsvrFS" resultType="com.world.chaip.entity.report.RsvrXunQi">
        select
            top 1 convert(int,BGMD) AS BGMD,convert(int,EDMD) as EDMD
        from RP_RSVRFSR_B
        <where>
            stcd in
            (select
                STCD
            from
                ST_STBPRP_B
            <where>
                STCD in(
                select
                    STCD
                from
                    RP_RSVRFCCH_B)
                and STTP like '%R%')
                and FSTP = #{fstp}
            </where>
        </where>

    </select>
